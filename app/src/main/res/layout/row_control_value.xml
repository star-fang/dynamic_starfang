<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_stat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="íž˜"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_stat_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:src="@drawable/ic_baseline_remove_circle_24"
        android:layout_toEndOf="@id/text_stat_title"
        android:layout_centerVertical="true"
        />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seek_bar_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:max="135"
        tools:progress="60"
        android:layout_toEndOf="@id/button_stat_minus"
        android:layout_toStartOf="@id/button_stat_plus"
        android:layout_centerVertical="true"
        android:background="#99000000"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_stat_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:src="@drawable/ic_baseline_add_circle_24"
        android:layout_toStartOf="@id/text_stat_val"
        android:layout_centerVertical="true"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_stat_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="60 / 135"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        />

</RelativeLayout>