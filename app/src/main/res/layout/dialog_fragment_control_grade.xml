<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_control_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/row_control_value"
        tools:itemCount="3"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_control_stat"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_control_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/row_control_value"
        tools:itemCount="5"
        app:layout_constraintTop_toBottomOf="@id/recycler_control_grade"
        app:layout_constraintBottom_toTopOf="@id/text_stat_sum"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_stat_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="300 / 500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    

</androidx.constraintlayout.widget.ConstraintLayout>